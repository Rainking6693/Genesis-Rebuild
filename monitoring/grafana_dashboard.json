{
  "dashboard": {
    "title": "Genesis 48-Hour Post-Deployment Monitoring",
    "tags": ["genesis", "deployment", "monitoring"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Test Pass Rate (SLO: >=98%)",
        "type": "stat",
        "targets": [
          {
            "expr": "(genesis_tests_passed_total / genesis_tests_total) * 100",
            "legendFormat": "Pass Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 98, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Rate (SLO: <0.1%)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(genesis_errors_total[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.05, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "P95 Latency (SLO: <200ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(genesis_operation_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 150, "color": "yellow"},
                {"value": 200, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job='genesis-orchestration'}",
            "legendFormat": "Service Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 1, "text": "UP", "color": "green"},
              {"value": 0, "text": "DOWN", "color": "red"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Test Pass Rate Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "(genesis_tests_passed_total / genesis_tests_total) * 100",
            "legendFormat": "Pass Rate %"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 95, "max": 100}
        ],
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Error Rate Trend",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(genesis_errors_total[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 0.2}
        ],
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Operation Latency Percentiles",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(genesis_operation_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(genesis_operation_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(genesis_operation_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P99"
          }
        ],
        "yaxes": [
          {"format": "ms"}
        ],
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 18}
      },
      {
        "id": 8,
        "title": "System Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode='idle'}[5m])) * 100)",
            "legendFormat": "CPU %"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory %"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 18}
      },
      {
        "id": 9,
        "title": "HTDAG Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(genesis_htdag_decomposition_duration_seconds_sum[5m]) / rate(genesis_htdag_decomposition_duration_seconds_count[5m]) * 1000",
            "legendFormat": "Decomposition Time (ms)"
          }
        ],
        "yaxes": [
          {"format": "ms"}
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 28}
      },
      {
        "id": 10,
        "title": "HALO Routing Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(genesis_halo_routing_duration_seconds_sum[5m]) / rate(genesis_halo_routing_duration_seconds_count[5m]) * 1000",
            "legendFormat": "Routing Time (ms)"
          }
        ],
        "yaxes": [
          {"format": "ms"}
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 28}
      },
      {
        "id": 11,
        "title": "AOP Validation Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(genesis_aop_validation_duration_seconds_sum[5m]) / rate(genesis_aop_validation_duration_seconds_count[5m]) * 1000",
            "legendFormat": "Validation Time (ms)"
          }
        ],
        "yaxes": [
          {"format": "ms"}
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 28}
      },
      {
        "id": 12,
        "title": "Test Execution Details",
        "type": "table",
        "targets": [
          {
            "expr": "genesis_tests_passed_total",
            "legendFormat": "Passed",
            "instant": true
          },
          {
            "expr": "genesis_tests_failed_total",
            "legendFormat": "Failed",
            "instant": true
          },
          {
            "expr": "genesis_tests_skipped_total",
            "legendFormat": "Skipped",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36}
      },
      {
        "id": 13,
        "title": "Active Alerts",
        "type": "alertlist",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36}
      }
    ]
  }
}

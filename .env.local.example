# If enabled, you need these:
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
# GENESIS_QA_MODEL=projects/191705308051/locations/us-central1/models/4274614236258238464@1
# GENESIS_SUPPORT_MODEL=projects/191705308051/locations/us-central1/models/3505061649931304960@1
# ... (other Vertex models)

# ============================================
# SECURITY & SAFETY
# ============================================
# Basic safety features (keep enabled)
PROMPT_SHIELD_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# WaltzRL Safety (Optional - for production)
ENABLE_WALTZRL=false  # Disable for local dev to reduce complexity

# ============================================
# MONITORING & OBSERVABILITY (Optional for local)
# ============================================
# Disable monitoring stack for local development (reduces overhead)
OTEL_ENABLED=false
METRICS_ENABLED=false
HEALTH_CHECK_ENABLED=false

# If you want logs, keep these:
LOG_FORMAT=json
LOG_SENSITIVE_DATA=false


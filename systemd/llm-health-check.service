[Unit]
Description=Local LLM Health Check Service
Documentation=https://github.com/genesis/genesis-rebuild
After=network.target llama-vision-server.service qwen3-vl-server.service

[Service]
Type=oneshot
User=genesis
Group=genesis
ExecStart=/home/genesis/genesis-rebuild/scripts/check_llm_health.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=llm-health-check

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/var/log

[Install]
WantedBy=multi-user.target
